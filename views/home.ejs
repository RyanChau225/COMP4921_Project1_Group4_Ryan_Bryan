<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8" />
  <link rel="stylesheet" href="bulma.min.css">

  <link rel="stylesheet" href="/styles/style.css">
  <link rel="stylesheet" type="text/css" href="/css/footer.css">


  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
</head>

<body>
  <section class="section">
    <div class="maincolumns columns is-desktop is-vcentered">
      <div class="column is-10 is-offset-1 notification is-info is-light box container">
        <div class="title">
          Media
        </div>
        <% if (locals.allMedias) { %>
        <div class="table-container">
          <table class="table is-bordered is-hoverable is-striped is-narrow">
            <thead>
              <tr>
                <th>Media ID</th>
                <th>Media Type</th>
                <th>Original Link</th>
                <th>Active</th>
                <th>URL</th>
                <th>Short URL</th>
                <th>Created</th>
                <th>Last Hit</th>
              </tr>
            </thead>
            <% let i=0; %>
            <% for(i=0; i < allMedias.length; i++) { %>
            <tr>
              <td><%= allMedias[i].media_id %></td>
              <td><%= allMedias[i].media_type %></td>
              <td><%= allMedias[i].original_link %></td>
              <td><%= allMedias[i].active ? 'Yes' : 'No' %></td>
              <td><%= allMedias[i].url %></td>
              <td><%= allMedias[i].shortURL %></td>
              <td><%= allMedias[i].created %></td>
              <td><%= allMedias[i].last_hit %></td>
            </tr>
            <% } %>
            <tfoot>
              <tr>
                <td colspan="8">
                  There are <%= i %> media items.
                </td>
              </tr>
            </tfoot>
          </table>
        </div>
        <% } %>



		<a href="/addCustomURL" class="button">Create Short Link / custom URL</a>
        <a href="/addImage" class="button">Create Image </a>
        <a href="/addText" class="button">Create Text </a>
        <form method="post" action="/logout">
			<!-- Your form fields here -->
			<button type="submit">Logout</button>
		  </form>

      </div>
    </div>
  </section>
  <%- include("templates/footer") %> 
  <script src="/scripts/script.js" type="text/javascript"></script>
</body>

</html>